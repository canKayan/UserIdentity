@model UserIdentity.Models.Product
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(i => i.ProductName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(i => i.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>In Stock</label>
        @Html.CheckBoxFor(i => i.InStock, new { @class = "checkbox" })
    </div>

    <div class="form-group">
        <label>Firm Name</label>
        @Html.TextBoxFor(i => i.Firm.FirmName, new { @class = "form-control" })
    </div>
<button class="btn btn-primary" type="submit">Add Product</button>
}



