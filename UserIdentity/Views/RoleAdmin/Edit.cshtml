@model UserIdentity.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            Add to @Model.Role.Name
        </div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr>
                    <td colspan="2">There is not any candidate to add. </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>User ID</td>
                    <td>Role</td>
                </tr>
                foreach (var nonmem in Model.NonMembers)
                {
                    <tr>
                        <td>@nonmem.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@nonmem.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            Remove from @Model.Role.Name
        </div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr>
                    <td colspan="2">There is not any candidate that has added to this role. </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>User ID</td>
                    <td>Role</td>
                </tr>
                foreach (var mem in Model.Members)
                {
                    <tr>
                        <td>@mem.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@mem.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}